<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#000000">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="64dp"
        android:layout_marginTop="32dp"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:background="@drawable/top_curves">

        <TextView
            android:layout_marginTop="16sp"
            android:background="@drawable/circle_background"
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@mipmap/mentaid_icon_foreground"
            android:layout_gravity="center"
android:text="@string/change_photo_string"
            android:drawableTop="@drawable/ic_add_a_photo_black_24dp"
            />

        <TextView

            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="CHANGE PROFILE PAGE PHOTO"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:drawableLeft="@drawable/ic_add_a_photo_black_24dp"
            android:textColor="#000000"
            android:drawablePadding="32dp"

            />

        <EditText
            android:textColorHint="#000000"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="FIRST NAME"
            android:background="@drawable/edit_text_out_line"
            android:padding="16dp"
            android:drawablePadding="32dp"
            android:layout_marginBottom="12dp"
            android:paddingLeft="16dp"
            android:drawableLeft="@drawable/ic_insert_emoticon_black_24dp"
            />
        <EditText

            android:layout_marginBottom="12dp"
            android:textColorHint="#000000"
            android:paddingLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="LAST NAME"
            android:layout_marginRight="32dp"
            android:padding="16dp"
            android:drawablePadding="32dp"
            android:layout_marginLeft="32dp"
            android:background="@drawable/edit_text_out_line"
            android:drawableLeft="@drawable/ic_insert_emoticon_black_24dp"
            />

        <EditText
            android:padding="16dp"
            android:drawablePadding="32dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="12dp"
            android:textColorHint="#000000"
            android:hint="EMAIL ADDRESS"
            android:background="@drawable/edit_text_out_line"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp"
            />
        <EditText
            android:textColorHint="#000000"
            android:padding="16dp"
            android:drawablePadding="32dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="SELECT LOCATION"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginBottom="12dp"
            android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
            android:background="@drawable/edit_text_out_line"
            android:drawableLeft="@drawable/ic_location_on_black_24dp"/>
        <EditText
            android:textColorHint="#000000"
            android:drawablePadding="32dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="QUOTE FOR BIO"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginBottom="12dp"
            android:paddingBottom="64dp"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:background="@drawable/edit_text_out_line"
            android:drawableLeft="@drawable/ic_local_library_black_24dp"/>
        <EditText
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp"
            android:padding="16dp"
            android:drawablePadding="32dp"
            android:hint="PASSWORD"
            android:textColorHint="#000000"

            android:background="@drawable/edit_text_out_line"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:drawableRight="@drawable/ic_remove_red_eye_black_24dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="RE-ENTER PASSWORD"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp" android:padding="16dp"
            android:drawablePadding="32dp"
            android:layout_marginBottom="56dp"
            android:textColorHint="#000000"

            android:drawableRight="@drawable/ic_remove_red_eye_black_24dp"
            android:background="@drawable/edit_text_out_line"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"/>
        <Button
            android:id="@+id/update"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="UPDATE"
            android:paddingLeft="64dp"
            android:paddingRight="64dp"
            android:layout_marginBottom="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"

            android:textSize="21sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/update_outline"
            />
    </LinearLayout>

</RelativeLayout>