<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3ea7b0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/top_curves"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp"

       >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="21dp"
            android:layout_marginTop="21dp"
            android:text="@string/tanisha_steward_string"
            android:textColor="#000000"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="21dp"
            android:drawableLeft="@drawable/ic_location_on_pink_24dp"
            android:drawablePadding="28dp"
            android:drawableStart="@drawable/ic_location_on_pink_24dp"
            android:text="@string/port_harcourt_string"
            android:textColor="#000000"
            android:textSize="21sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:layout_marginBottom="16dp"
            android:gravity="start"
            android:layout_gravity="center"
            android:text="@string/greater_than_string"
            android:textSize="21sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/edit_prof"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/out_line2"
            android:layout_marginBottom="8dp"
            android:paddingLeft="28dp"
            android:paddingRight="28dp"
            android:layout_marginTop="8dp"
            android:text="@string/edit_profile_string"
            android:textColor="#000000"
            android:textSize="21sp" />
    </LinearLayout>
</RelativeLayout>