<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#3ea7b0">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@drawable/top_curves"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:gravity="center"
        android:paddingBottom="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TANISHA STEWARD"
            android:paddingTop="24dp"
            android:textSize="32dp"
            android:textColor="#000000"
            android:layout_marginBottom="24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Port Harcourt, Nigeria"
            android:layout_marginBottom="24dp"
            android:textColor="#000000"
            android:textSize="24dp"
            android:drawablePadding="28dp"
            android:drawableLeft="@drawable/ic_location_on_pink_24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You Are Greater Than You Can Ever Imagine"
            android:layout_marginBottom="18dp"
            android:textStyle="italic"
            android:textSize="21dp"
            android:gravity="left"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EDIT PROFILE"
            android:textSize="24dp"
            android:textColor="#000000"
            android:paddingBottom="8dp"
            android:background="@drawable/out_line2"
            android:paddingTop="8dp"
            android:paddingLeft="28dp"
            android:paddingRight="28dp"
            />
    </LinearLayout>
</RelativeLayout>