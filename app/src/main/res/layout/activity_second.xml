<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerInParent="true">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/mentaid_icon_foreground"
        android:layout_gravity="center"

        />
        <TextView
            android:textSize="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MENTAID"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="64dp"
            android:textColor="#000000"

            />

        <EditText
            android:textColorHint="#000000"
            android:layout_width="match_parent"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp"
            android:layout_height="wrap_content"
            android:hint="FIRST NAME"
            android:background="@drawable/outer_line"
            android:padding="16dp"
            android:drawablePadding="16dp"
            android:layout_marginBottom="12dp"
            android:paddingLeft="16dp"
            android:drawableLeft="@drawable/ic_insert_emoticon_black_24dp"
            />
        <EditText

            android:layout_marginBottom="12dp"
            android:textColorHint="#000000"
android:paddingLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="LAST NAME"
            android:layout_marginRight="32dp"
            android:padding="16dp"
            android:drawablePadding="16dp"
            android:layout_marginLeft="32dp"
            android:background="@drawable/outer_line"
            android:drawableLeft="@drawable/ic_insert_emoticon_black_24dp"
            />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGN UP AS"
            android:textColor="#000000"
            android:layout_marginLeft="38dp"
            android:textSize="21dp"
            android:layout_marginRight="12dp"

            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:padding="12dp"
            android:text="USER"
            android:layout_marginRight="64dp"
            android:textSize="21dp"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
android:textSize="21dp"
            android:padding="12dp"
            android:text="COUNSELLOR"/>

    </LinearLayout>

        <EditText
            android:padding="16dp"
            android:drawablePadding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:textColorHint="#000000"

            android:hint="EMAIL ADDRESS"
            android:background="@drawable/outer_line"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp"
            />
        <EditText
            android:textColorHint="#000000"
            android:padding="16dp"
            android:drawablePadding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PHONE NUMBER"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginBottom="12dp"

            android:background="@drawable/outer_line"
            android:drawableLeft="@drawable/ic_call_black_24dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_marginBottom="12dp"

            android:layout_height="wrap_content"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp"
            android:padding="16dp"
            android:drawablePadding="16dp"
            android:hint="PASSWORD"
            android:textColorHint="#000000"

            android:background="@drawable/outer_line"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:drawableRight="@drawable/ic_remove_red_eye_black_24dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="RE-ENTER PASSWORD"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="32dp" android:padding="16dp"
            android:drawablePadding="16dp"
            android:layout_marginBottom="64dp"
            android:textColorHint="#000000"

            android:drawableRight="@drawable/ic_remove_red_eye_black_24dp"
            android:background="@drawable/outer_line"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textColor="#fff"
android:id="@+id/register"
            android:textSize="28sp"
            android:padding="16dp"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:background="#c51c98"
            />
    </LinearLayout>
</RelativeLayout>